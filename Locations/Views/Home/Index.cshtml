@{
    ViewData["Title"] = "Home Page";
}

<main role="main">

    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">Welcome to My-Shop</h1>
            <p class="lead text-muted">People come to visit our shops who want an out of this world shopping experience.</p>            
            <a class="btn btn-lg transparent-button" asp-controller="Locations" asp-action="Index" asp-route-id="-1">
                <i class="fa fa-map-marker fa-fw text-primary"></i><strong class="text-primary">All Stores</strong>
            </a>
        </div>
    </section>

    <div class="album py-3 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm bg-light">
                        <div class="card-header">
                            <strong class="text-danger">Mega Store</strong>
                        </div>
                        <img class="album-image rounded mx-auto d-block" src="~/images/mega-store.svg" alt="mega-store" />
                        <div class="card-body">
                            <p class="card-text">Our mega-stores have a huge range of products</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a class="btn btn-danger" asp-controller="Locations" asp-action="Index" asp-route-id="0">View</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm bg-light">
                        <div class="card-header">
                            <strong class="text-info">Town Store</strong>
                        </div>
                        <img class="album-image rounded mx-auto d-block" src="~/images/store.svg" alt="store" />
                        <div class="card-body">
                            <p class="card-text">Our town stores are conveniently located in your town centre</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a class="btn btn-info" asp-controller="Locations" asp-action="Index" asp-route-id="1">View</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm bg-light">
                        <div class="card-header">
                            <strong class="text-success">Local Shop</strong>
                        </div>
                        <img class="album-image rounded mx-auto d-block" src="~/images/local.svg" alt="local shop" />
                        <div class="card-body">
                            <p class="card-text">Our local shops are open when you need them</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a class="btn btn-success" asp-controller="Locations" asp-action="Index" asp-route-id="2">View</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

