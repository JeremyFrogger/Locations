@model Locations.Models.LocationsDetailsViewModel

@{
    ViewBag.Title = "Store Details";
}

<h3 class="text-primary">@ViewBag.Title</h3>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <div class="static-map">
                <img src="@Model.GoogleMap" alt="Map of Store" />
            </div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Address)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Address), @Html.DisplayFor(model => model.City), @Html.DisplayFor(model => model.County) @Html.DisplayFor(model => model.PostCode)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Phone)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Phone)
                </dd>
            </dl>
        </div>
        <div class="col-md-8">
            <h4>Opening Times</h4>
            <hr/>
            <table>
                @foreach (var openingTime in @Model.OpeningTimes)
                {
                    <tr>
                        <td>@openingTime.DayOfWeek.ToString()</td>
                        <td>@openingTime.OpenClosed</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
<div>
    <a class="btn btn-primary" asp-controller="Locations" asp-action="Edit" asp-route-id="@Model.Id" >Edit</a>
    <a class="btn btn-primary" asp-action="Index" asp-route-id="@Model.LocationTypeId" >Cancel</a>
</div>

